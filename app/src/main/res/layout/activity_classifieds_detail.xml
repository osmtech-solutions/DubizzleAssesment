<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimens_55">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relatvie_container_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_200">

                    <ImageView
                        android:id="@+id/product_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/placeholder"
                        android:scaleType="fitXY" />

                    <RelativeLayout
                        android:id="@+id/rl_back"
                        android:layout_width="@dimen/dimens_40"
                        android:layout_height="@dimen/dimens_30"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimens_10"
                        android:background="@drawable/back_arrow_white_bg_curve">

                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="@dimen/dimens_30"
                            android:layout_height="@dimen/dimens_30"
                            android:layout_marginLeft="@dimen/dimens_3"
                            android:padding="@dimen/dimens_7"
                            android:src="@drawable/back_arrow_black" />


                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_add_wishlist"
                        android:src="@drawable/heart_round_gray"
                        android:layout_width="@dimen/dimens_30"
                        android:layout_height="@dimen/dimens_30"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dimens_8"
                        android:layout_marginRight="@dimen/dimens_10" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear_text_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/relatvie_container_one"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimens_10"
                    android:paddingRight="@dimen/dimens_10"
                    android:paddingTop="@dimen/dimens_10">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.osmtech.dubizzleassesment.classifiedsapp.utils.customfonts.CustomTextViewBold
                            android:id="@+id/txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAllCaps="true"
                            android:textColor="@color/text_orange"
                            android:textSize="@dimen/dimens_9"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.osmtech.dubizzleassesment.classifiedsapp.utils.customfonts.CustomTextViewLight
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/dimens_10"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <com.osmtech.dubizzleassesment.classifiedsapp.utils.customfonts.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/dimens_15"
                        android:id="@+id/txt_price"/>

                    <RatingBar
                        android:id="@+id/rating_bar"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressTint="@color/colorPrimaryDark"
                        android:progressBackgroundTint="@color/colorPrimaryDark"
                        android:layout_marginTop="@dimen/dimens_3" />

                    <com.osmtech.dubizzleassesment.classifiedsapp.utils.customfonts.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:text="Description"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/dimens_9"
                        />

                    <com.osmtech.dubizzleassesment.classifiedsapp.utils.customfonts.CustomTextViewNormal
                        android:layout_marginEnd="@dimen/dimens_10"
                        android:layout_marginRight="@dimen/dimens_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:layout_marginBottom="@dimen/dimens_10"
                        android:maxLines="5"
                        android:text="@string/sample_text"
                        android:textColor="#787878"
                        android:textSize="@dimen/dimens_12"
                        android:id="@+id/description_tv"/>


                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dimens_10">

                        <com.osmtech.dubizzleassesment.classifiedsapp.utils.customfonts.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_5"
                            android:text="Additional Information"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/dimens_12" />

                        <com.osmtech.dubizzleassesment.classifiedsapp.utils.customfonts.CustomTextViewNormal
                            android:id="@+id/txt_additional_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_5"
                            android:layout_marginBottom="@dimen/dimens_10"
                            android:maxLines="5"
                            android:text="@string/sample_text"
                            android:textColor="#787878"
                            android:textSize="@dimen/dimens_12" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_40"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimens_25"
        android:layout_marginEnd="@dimen/dimens_25"
        android:layout_marginBottom="@dimen/dimens_10"
        android:background="@drawable/black_radius_bg"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/ll_buy_now"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimens_25"
                android:layout_height="@dimen/dimens_25"
                android:layout_gravity="center"
                android:padding="@dimen/dimens_2"
                android:src="@drawable/chat_contact_us" />

            <com.osmtech.dubizzleassesment.classifiedsapp.utils.customfonts.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_5"
                android:text="Chat"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimens_12" />


        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/view_line" />
        <LinearLayout
            android:id="@+id/ll_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimens_25"
                android:layout_height="@dimen/dimens_25"
                android:layout_gravity="center"
                android:padding="@dimen/dimens_2"
                android:src="@drawable/call_contact_us" />

            <com.osmtech.dubizzleassesment.classifiedsapp.utils.customfonts.CustomTextViewNormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_5"
                android:text="Call"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimens_12" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>