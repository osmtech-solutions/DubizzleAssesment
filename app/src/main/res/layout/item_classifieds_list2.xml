<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/liner_container_blog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimens_8"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_store_list"
                android:layout_marginTop="@dimen/dimens_5"
                android:layout_marginBottom="@dimen/dimens_4"
                android:layout_marginStart="@dimen/dimens_8"
                android:layout_marginEnd="@dimen/dimens_8"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_2"
                android:layout_marginRight="@dimen/dimens_8">

                <ImageView
                    android:id="@+id/iv_classified_image"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/thumbnail"
                    android:layout_gravity="center"

                    />
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
        <com.osmtech.dubizzleassesment.classifiedsapp.utils.customfonts.CustomTextViewBold
            android:layout_marginStart="@dimen/dimens_8"
            android:layout_marginEnd="@dimen/dimens_8"
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:padding="@dimen/dimens_4"
            android:text="Notebook"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimens_12" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginStart="@dimen/dimens_8"
            android:layout_marginEnd="@dimen/dimens_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.osmtech.dubizzleassesment.classifiedsapp.utils.customfonts.CustomTextViewNormal
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_20"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:paddingStart="@dimen/dimens_10"
                android:paddingEnd="@dimen/dimens_10"
                android:background="@drawable/login_btn_lite_orange_radius_bg"
                android:gravity="center"
                android:text="AED 28,0000000"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimens_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.osmtech.dubizzleassesment.classifiedsapp.utils.customfonts.CustomTextViewLight
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimens_10"
                android:text="2019-02-24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_marginTop="@dimen/dimens_8"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line" />

    </LinearLayout>


</LinearLayout>